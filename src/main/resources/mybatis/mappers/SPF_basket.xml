<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SPF_basket">

	<insert id="insertbasket" parameterType="kr.ac.sungkyul.MDS.vo.BasketVo">
		<![CDATA[
			insert into basket values 
			(basket_seq.nextval, #{basket_count}, #{product_no}, #{productoprion_no}, #{member_no}, #{mall_no})
		]]>
	</insert>

	<select id="get_product_detail_product" parameterType="java.lang.Integer"
		resultType="kr.ac.sungkyul.MDS.vo.ProductVo">
		<!-- 상품 상세 정보(3개 테이블 조회) 중 상품에 대한 정보를 가져옴 -->
	<![CDATA[
		select * from product where product_no=#{product_no}
		]]>
	</select>




</mapper>